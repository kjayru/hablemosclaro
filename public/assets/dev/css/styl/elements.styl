.box
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background rgba(0,0,0,.25)

	&__bg-closer
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		z-index 1

	&__inset
		width 100%
		height 100%
		overflow auto
		position relative
		z-index 2

		display flex
		justify-content center
		text-align center

	&__content
		width 100%
		max-width rem(800)
		padding rem(40)
		background-color #fff

.slider_principal + .section
	padding-top rem(50)
	@media (max-width 700px)
		padding-top rem(30)
.section
	padding-bottom rem(50)
	&:first-of-type, + .section.m--bg
		padding-top rem(50)
	
	
	@media (max-width 700px)
		
		padding-bottom rem(30)
		&:first-of-type, + .section.m--bg
			padding-top rem(30)
		
.g-
	&title
		font-weight 700
		font-size rem(25)
		margin-bottom rem(34)
		display flex
		align-items center
		&:before
			content ''
			display block
			width rem(26)
			height rem(3)
			margin-right rem(14)
			background-color --rojo
		&.m--swiper
			margin-bottom rem(24)
		&.m--white
			color --blanco
				
		@media (max-width 700px)
		
			margin-bottom rem(24)
			
			&.m--swiper
				margin-bottom rem(10)