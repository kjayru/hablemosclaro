.search
	position fixed
	top -200%
	left 0
	padding-top rem(64)
	background rgba(0,0,0,.25)
	width 100%
	height 100%
	z-index 90
	opacity 0
	transition opacity ease 0.25s
	
	display flex
	justify-content flex-end
	
	&.-active-
		top 0
		opacity 1
	
	&__content
		width 100%
		max-width rem(430)
		padding rem(32)
		background-color --blanco
		
		&__back
			display none
	
	&__form
		margin-bottom rem(32)
		position relative
		
		&__input
			width 100%
			padding rem(0, 50, 0, 58)
			height rem(54)
			background --blanco2 url('../images/lupa.png') no-repeat rem(20) rem(17)
			border rem(1) solid --blanco2
			border-radius rem(3)
			font-size rem(18)
			color --negro
			&:focus
				border-color #ddd
		
		&__button
			display none
		
		&__clean
			display none
			position absolute
			top rem(16)
			right rem(15)
			cursor pointer
			&.-active-
				display block
			
	&__results
		display none
		
		&.-active-
			display block
		
		&__title
			display block
			font-size rem(12)
			font-weight 500
			color --gris
			text-transform uppercase
			letter-spacing rem(0.77)
			margin-bottom rem(7)
			
			&.m--2
				margin-bottom rem(28)
		
		&__data
			margin-bottom rem(30)
			span
				display block
				padding rem(20, 0)
				border-bottom rem(1) solid --blanco3
			a
				display inline-block
				max-width 100%
				color --negro
				position relative
				white-space nowrap
				text-overflow ellipsis
				overflow hidden
				strong
					color --negro-total
					font-weight 700
				&:after
					content ''
					display block
					width 0
					height rem(2)
					background-color --rojo
					margin-top rem(3)
					opacity 0
					transition all ease .25s
				&:hover
					&:after
						opacity 1
						width 100%
				&.m--all
					color --celeste
					img
						display inline-block
						vertical-align middle
						margin-left rem(10)
					&:after
						background-color --celeste
					


		&__wanted
			font-size rem(18)
			
			display flex
			flex-direction column
			align-items flex-start
			
			a
				color --negro
				margin-bottom rem(20)
				&:after
					content ''
					display block
					width 0
					height rem(2)
					background-color --rojo
					margin-top rem(3)
					opacity 0
					transition all ease .25s
				&:hover
					&:after
						opacity 1
						width 100%
						

	@media ( max-width 1080px )
	
		z-index 200
		padding-top 0
		
		&__content
			padding rem(20, 25)
			max-width initial
			
			&__back
				display flex
				align-items center
				height rem(43)
				width rem(30)
				position absolute
				top rem(20)
				left rem(25)
				cursor pointer
				z-index 4
		
		&__form
			padding-left rem(30)
			
			&__input
				background --blanco2
				padding rem(0, 17)
				height rem(43)
				max-width initial
				font-size rem(13)