.slider_principal
	position relative
	height rem(468)
	overflow hidden
	
	&__item
		width 100%
		height rem(468)
		background-color --negro
		color --blanco
		position relative
		
		display flex
		align-items flex-start
		
		&:hover
			.slider_principal__item
				&__image
					img
						transform scale(1.05)
		
		&__image
			flex 70%
			overflow hidden
			transition all ease .25s
			img
				width 100%
				height 100%
				object-fit cover
				transition all ease .25s
		
		&__header
			flex 30%
			position relative
			z-index 2
			padding rem(40, 28)
			transition all ease .25s
			
			display flex
			flex-wrap wrap
			justify-content space-between
			align-items flex-start
		
		&__subtitle, &__date
			font-size rem(10)
			text-transform uppercase
			font-weight 700
			letter-spacing rem(0.5)
		
		&__date
			font-weight 500
		
		&__title
			width 100%
			font-size rem(22)
			font-weight 700
			line-height 1.5
			display block
			margin rem(15, 0, 30)
			
			display -webkit-box
			-webkit-line-clamp 5
			-webkit-box-orient vertical
			overflow hidden
			text-overflow ellipsis
		
		&__timer
			font-size rem(14)
	
		&__link
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			z-index 5
			font-size 0
	
	&__nav
		position absolute
		bottom 0
		right 0
		z-index 3
		
		width 30%
		color --blanco
		padding rem(25, 28)
		
		display flex
		align-items center
		
		&__arrow
			cursor pointer
			opacity 0.5
			transition opacity ease 0.25s
			
			&.m--left
				transform rotate(180deg)

			&:hover
				opacity 1

		&__counter
			padding rem(0, 12, 0, 15)
			font-size rem(12)
			font-weight 500
			letter-spacing rem(0.5)
			width auto
		
		&__play
			margin-left auto
			height rem(14)
			border-left rem(3) solid --blanco
			border-right rem(3) solid --blanco
			padding-right rem(4)
			cursor pointer
			transition all ease .25s
			
			&.-stoped-
				border-right 0
				padding-right 0
				border-left rem(10) solid --blanco
				border-top rem(7) solid transparent
				border-bottom rem(7) solid transparent

	
	@media (max-width 900px)
		
		&__item
			
			&__image
				flex 55%
			
			&__header
				flex 45%
		
		&__nav
			width 45%
	

	@media (max-width 600px)
		
		height calc( 100% - 64px)
		
		&__item
			height 100%
			flex-direction column
			
			&__image
				flex 1
			&__header
				flex none
				padding rem(20, 20, 80)
			&__title
				margin rem(15, 0)
				height rem(56)
				font-size rem(18)
				-webkit-line-clamp 2
						
		&__nav
			width 100%
			padding rem(0, 20, 20)
