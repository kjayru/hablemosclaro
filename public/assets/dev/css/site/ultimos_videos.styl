.ultimos_videos
	background-color --negro
	color --blanco
	
	&__list
		display flex
		
	&__item
		flex 1
		cursor pointer
		
		&:hover, &.-active-
			.ultimos_videos__item
				&__image
					img
						transform scale(1.05)
		
		&__image, &__video
			display block
			width 100%
			height rem(386)
			border-radius rem(6)
			overflow hidden
			position relative
			
			&__timer
				position absolute
				bottom rem(23)
				left rem(28)
				font-size rem(10)
				letter-spacing rem(1.09)
				background-color --negro-total
				padding rem(6, 10)
				
				display flex
				align-items center
				
				&:before
					content ''
					display block
					border-left rem(9) solid --blanco
					border-top rem(6) solid --negro-total
					border-bottom rem(6) solid --negro-total
					margin-right rem(8)
			
			img
				width 100%
				height 100%
				object-fit cover
				transition all ease .25s
			
			&:after
				content ''
				display block
				width rem(78)
				height rem(78)
				background url('../images/ico_play.png') no-repeat center center / cover
				position absolute
				top 50%
				left 50%
				margin rem(-39, 0, 0, -39)
		
		&__header
			padding-top rem(34)
		
		&__subtitle
			text-transform uppercase
			font-weight 700
			font-size rem(10)
			letter-spacing rem(0.9)
			margin-bottom rem(13)
			display block
			
		
		&__title
			font-weight 700
			font-size rem(25)
			line-height 1.3
			
			display -webkit-box
			-webkit-line-clamp 2
			-webkit-box-orient vertical
			overflow hidden
			text-overflow ellipsis
					
	
	&__sublist
		flex none
		padding-left rem(21)
		width rem(570)
		
		.ultimos_videos__item
			padding rem(16)
			border-bottom rem(1) solid --gris3
			display flex
			transition all ease .25s
			
			&:last-child
				border-bottom 0
			
			&:hover, &.-active-
				background-color --gris3
			
			&__image
				height rem(143)
				width rem(220)
				flex none
				
				&:after
					width rem(52)
					height rem(52)
					margin rem(-26, 0, 0, -26)
				&__timer
					bottom rem(10)
					left rem(15)

			&__header
				padding rem(19, 0, 19, 27)
			
			&__title
				font-size rem(16)
				-webkit-line-clamp 3
				line-height 1.5
			


	@media (max-width 1100px)
		
		&__sublist
			width rem(460)
	

	@media (max-width 800px)
	
		&__list
			flex-direction column
		
		&__item
			
			&__image, &__video
				height rem(280)
		
		&__sublist
			padding rem(25, 0, 0)
			width 100%
			
			.ultimos_videos__item
				
				&__image
					max-width rem(237)
	

	@media (max-width 500px)
	
		&__item
			
			&__header
				padding-top rem(16)
			
			&__image, &__video
				height rem(200)
				&__timer
					bottom rem(15)
					left rem(15)
				&:after
					width rem(60)
					height rem(60)
					margin rem(-30, 0, 0, -30)
			
			&__subtitle
				margin-bottom rem(8)

			&__title
				font-size rem(15)
				line-height 1.6
		
		&__sublist
			
			.ultimos_videos__item
				padding rem(12)
				&__header
					padding rem(10, 0, 10, 15)
				&__title
					font-size rem(15)
				&__image
					flex none
					width rem(119)
					height rem(117)
					&:after
						display none
	

	@media (max-width 400px)
		
		&__item
			
			&__image, &__video
				height rem(180)