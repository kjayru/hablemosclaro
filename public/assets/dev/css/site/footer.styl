.footer
	background-color --negro-total
	color --blanco
	
	&__copy
		display block
		font-size rem(14)
		background-color #0f0e0e
		padding rem(20, 15)
		text-align center
		br
			display none
	
	&__inset
		padding rem(50, 15)
		max-width rem(1130)
		display flex
		align-items stretch
	
	&__header
		display flex
		flex-direction column
		padding-right rem(130)
		margin-right rem(70)
		border-right rem(1) solid --negro

	&__title
		font-size rem(20)
		font-weight 500
		margin-bottom rem(10)
	
	&__email
		color --blanco
		&:hover
			color --rojo
	
	&__socials
		display flex
		padding-top rem(20)
		&__link
			margin-right rem(15)
			
	
	&__nav
		flex 1
		
		&__item
			margin-bottom rem(20)
			&:last-child
				margin-bottom 0
			
		&__title
			display block
			font-size rem(10)
			text-transform uppercase
			color --gris2
			font-weight 500
			letter-spacing rem(0.9)
			margin-bottom rem(20)
		
		&__link
			color --blanco
			font-size rem(16)
			
			&:hover
				color --rojo
						
			
	@media (max-width 810px)

		&__header
			padding-right rem(50)
			margin-right rem(40)
	

	@media (max-width 700px)
		
		&__inset
			padding rem(35, 15)
			flex-direction column
			justify-content center
			align-items center
		
		&__header
			border 0
			padding 0
			margin 0
			align-items center
		
		&__title
			font-size rem(18)
		
		&__nav
			width rem(240)
			text-align center
			border-top rem(1) solid --negro
			padding-top rem(40)
			margin-top rem(30)
				
		&__copy 
			width 100%
			line-height 1.6
			text-align center
			br
				display block
		