.listado_de_articulos
	display flex
	flex-wrap wrap
	
	&__header
		width 100%
		padding-right rem(50)
		position relative
	
	.g-title
		margin-bottom rem(50)			
	
	&__showfilter
		display none
		
	&__nav
		width rem(294)
		margin-right rem(25)
		flex none
		&::-webkit-scrollbar
		&::-webkit-scrollbar-track
		&::-webkit-scrollbar-thumb
		&::-webkit-scrollbar-track-piece
			opacity 0
		
		&__inset 
			~ .listado_de_articulos__filter
				border-top rem(1) solid #f0f0f0
				padding-top rem(36)
				margin-top rem(30)
		
		&__item
			margin-bottom rem(25)
		
		&__link
			display inline-block
			color --gris
			font-size rem(25)
			font-weight 500
			transition all ease .25s
			&:after
				content ''
				display block
				width 0
				height rem(3)
				background-color --rojo
				margin-top rem(3)
				opacity 0
				transition all ease .25s
			&:hover
				color --negro
				&:after
					opacity 1
					width 100%
			&.-active-
				color --negro
				&:after
					opacity 1
					width 50%
			
	&__filter
		
		&__title
			font-size rem(18)
			line-height 0.9
			color #91979e
			font-weight 500
			display block
			margin-bottom rem(20)
			.header__button-mobile
				display none
		
		&__select
			border rem(1) solid #979797
			padding rem(0, 20)
			font-size rem(20)
			color #91979e
			background-color #fafafa
			border-radius rem(3)
			height rem(54)
			position relative
			cursor pointer
			
			display flex
			justify-content space-between
			align-items center
			
			&:after
				content ''
				display inline-block
				border rem(1) solid #979797
				border-left 0
				border-top 0
				width rem(10)
				height rem(10)
				transform rotate(45deg)
				margin rem(-5, 0, 0, 15)
			
			&:hover
				.listado_de_articulos__filter__options
					display block
		
		&__options
			display none
			position absolute
			top rem(50)
			left 0
			z-index 3
			width 100%
			background-color #fff
			height auto
			padding rem(0, 20)
			border-radius rem(3)
			// border rem(1) solid #e5e7e8
			box-shadow rem(0, 5, 10) rgba(0,0,0,.15)
			
			a
				color #283342
				font-size rem(16)
				height rem(46)
				border-bottom rem(1) solid #e5e7e8
				
				display flex
				align-items center
				justify-content space-between
				
				&:last-child
					border-bottom 0
				
				&:hover
					color --rojo

				&:after
					content ''
					display block
					width rem(16)
					height rem(12)
					background url('../images/ico_filter_selected.png')
					opacity 0
				
				&.-active-
					&:after
						opacity 1

	&__list
		flex 1
		
		display flex
		flex-wrap wrap
		
		.g-button-group
			order 99999
		
		.columnas__item
			height auto
			width calc(33.33% - 15px)
			margin-right rem(22)
			margin-bottom rem(22)
			
			&:nth-child(6n)
				~ .columnas__item
					display none
			
			@media (min-width 801px)
				&:nth-child(3n)
					margin-right 0
				 
		&.-js-
			.columnas__item
				display block
				&:nth-child(6n)
					~ .columnas__item
						display block
				&.-end-
					~ .columnas__item
						display none

	@media (max-width 1080px)
		
		flex-direction column
		
		&__showfilter
			display block
			position absolute
			bottom rem(55)
			right 0
		
		.g-title
			+ .listado_de_articulos__showfilter
				bottom rem(50)

		&__nav
			width 100%
			overflow auto
			height rem(45)
			margin-bottom rem(20)
			
			&__inset
				display flex
				width max-content

				~ .listado_de_articulos__filter
					border-top 0
					padding-top 0
					margin-top 0
			
			&__item
				padding rem(0, 15, 0, 0)
				margin 0
				&:last-child
					padding-right 0
			
			&__link
				font-size rem(18)
				color #91979e
				font-weight 500
				br
					display none
				&.-active-
					&:after
						width 100%
		
		&__filter
			display none
			margin 0
			border 0
			background-color #fff
			width 100%
			height 100%
			padding-top 0
			
			position fixed
			top 0
			left 0
			z-index 100
			
			&__title
				height rem(64)
				border-bottom rem(1) solid #e5e7e8
				padding-left rem(15)
				color --negro
				font-size rem(16)
				margin 0
				
				display flex
				align-items center
				justify-content space-between
				
				.header__button-mobile
					margin 0
					display flex
			
			&__select
				border 0
				background-color --blanco
				height auto
				padding 0
				
				&:after
					display none
				
				&__title
					display none
					
			&__options
				display block
				position static
				border-radius 0
				box-shadow none
				border-bottom rem(1) solid #e5e7e8
				a
					height rem(56)
					font-size rem(14)

		
		&__list
			flex none
			height auto
			width 100%
	

	@media (max-width 800px)
		
		&__showfilter
			bottom rem(42)
		
		.g-title
			margin-bottom rem(30)
			+ .listado_de_articulos__showfilter
				bottom rem(30)
		
		&__list
			
			.columnas__item
				width calc(50% - 7.5px)
				margin-right rem(15)
				margin-bottom rem(15)
				&:nth-child(2n)
					margin-right 0
	

	@media (max-width 700px)
	
		&__list
			
			.columnas__item
				height rem(300)
	

	@media (max-width 540px)
	
		&__list
			
			.columnas__item
				width 100%
				height rem(200)
				margin rem(0, 0, 20)
				display flex
				flex-direction row
				align-items stretch
				
				&__image
					flex 1
					max-width rem(200)
					height auto
				
				&__header
					flex 1
					width auto
					height auto
					align-items flex-start
					
				&__title
					margin rem(0, 0, 10)
				
				&__timer
					margin-top auto
			

			&.-js-
				.columnas__item
					display flex
					&:nth-child(6n)
						~ .columnas__item
							display flex
					&.-end-
						~ .columnas__item
							display none
	

	@media (max-width 480px)
	
		&__list
			
			.columnas__item
				width 100%
				height rem(130)
				margin rem(0, 0, 15)
				
				&:last-child
					margin 0
				
				&__header
					padding rem(15)
				
				&__image
					max-width rem(130)

				&__title
					margin rem(7, 0, 10)
					font-size rem(15)
					line-height 1.3
				
				&__date
					display none
